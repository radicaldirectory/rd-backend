{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "name": "Events"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "Name": {
      "type": "string"
    },
    "Description": {
      "type": "text"
    },
    "EventStart": {
      "type": "datetime",
      "required": true
    },
    "EventEnd": {
      "type": "datetime"
    },
    "Location": {
      "type": "json"
    },
    "Groups": {
      "via": "Events",
      "collection": "groups",
      "dominant": true
    },
    "Posts": {
      "via": "Event",
      "collection": "posts"
    },
    "UsersFollowing": {
      "via": "EventsFollowing",
      "plugin": "users-permissions",
      "collection": "user"
    }
  }
}
